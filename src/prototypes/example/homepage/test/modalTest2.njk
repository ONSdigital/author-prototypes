        var starredRowCount = starredTBody.rows.length;
        var basicRowCount = basicTBody.rows.length;

        // Calculate the total row count
        var totalRowCount = starredRowCount + basicRowCount;

        // Calculate the number of rows to show for 'basic-table'
        var basicRowsToShow = Math.min(4, 4 - starredRowCount);

        // Hide all rows in 'basic-table'
        for (var i = 0; i < basicRowCount; i++) {
            basicTBody.rows[i].style.display = "none";
        }

        // Show the first 'basicRowsToShow' rows in 'basic-table'
        for (var i = 0; i < basicRowsToShow; i++) {
            basicTBody.rows[i].style.display = "table-row";
        }

        // Show or hide the "Next" button based on row counts
        if (totalRowCount > 4 && basicRowCount > basicRowsToShow) {
            nextButton.style.display = "inline-block";
        } else {
            nextButton.style.display = "none";
        }
    }


    // Initial call to update pagination when the page loads
    updatePagination();

